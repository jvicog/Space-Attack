<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292828">

    <TextView
        android:id="@+id/title"
        style="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:fontFamily="@font/allerta_stencil"
        android:text="SPACE ATTACK"
        android:textColor="#E91E63"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/title2"
        style="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/allerta_stencil"
        android:text="Elige tu nave"
        android:textColor="#673AB7"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="115dp"
        android:layout_height="47dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="300dp"
        android:background="@drawable/blue_button"
        android:fontFamily="@font/allerta_stencil"
        android:text="Â¡JUGAR!"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/buttonSelectShip1"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginLeft="-65dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="180dp"
        android:background="@drawable/blue_button_selected"
        android:onClick="selectShip1"
        android:scaleX="2.2"
        android:scaleY="2.2"
        app:srcCompat="@drawable/ship" />

    <ImageButton
        android:id="@+id/buttonSelectShip2"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="65dp"
        android:background="@drawable/blue_button"
        android:onClick="selectShip2"
        android:scaleX="2.2"
        android:scaleY="2.2"
        app:srcCompat="@drawable/ship2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="-200dp"
        app:srcCompat="@drawable/stats_ship" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="200dp"
        app:srcCompat="@drawable/stats_ship2" />

</FrameLayout>